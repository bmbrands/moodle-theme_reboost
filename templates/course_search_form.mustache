<form action="{{searchurl}}" id="{{id}}" method="get" class="form-inline">
    <fieldset class="coursesearchbox invisiblefieldset">
        <div class="input-group">
			<input id="{{inputid}}" class="form-control" name="search" placeholder="{{#str}}searchcourses{{/str}}" type="text" size="{{inputsize}}" value="{{value}}">
			<span class="input-group-btn">
				<button class="btn btn-primary" type="submit">{{#str}}go{{/str}}</button>
			</span>
		</div>
    </fieldset>
</form>
